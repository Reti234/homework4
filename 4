import java.util.Random;
import java.util.Scanner;

public class MagicBall {
    public static void main(String[] args) {
        String[] answers = {
            "Бесспорно",
            "Предрешено",
            "Никаких сомнений",
            "Определённо да",
            "Можешь быть уверен в этом",
            "Мне кажется — да",
            "Вероятнее всего",
            "Хорошие перспективы",
            "Знаки говорят — да",
            "Да",
            "Пока не ясно, попробуй снова",
            "Спроси позже",
            "Лучше не рассказывать",
            "Сейчас нельзя предсказать",
            "Сконцентрируйся и спроси опять",
            "Даже не думай",
            "Мой ответ — нет",
            "По моим данным — нет",
            "Перспективы не очень хорошие",
            "Весьма сомнительно"
        };

        System.out.println("Привет! Я магический шар. Я знаю ответ на любой твой вопрос.");
        System.out.println("Задай мне вопрос и я дам тебе ответ. Для выхода введи 'Выход'.");
        System.out.println();

        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        while (true) {
            System.out.print("Задай вопрос: ");
            String question = scanner.nextLine();

            if (question.equalsIgnoreCase("Выход")) {
                break;
            }

            int randomIndex = random.nextInt(answers.length);
            String answer = answers[randomIndex];

            System.out.println("Магический шар говорит: " + answer);
            System.out.println();
        }

        System.out.println("Спасибо, что играли с магическим шаром!");
        scanner.close();
    }
}
